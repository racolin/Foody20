<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/ll_title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:textSize="24sp"
            android:text="Thông tin liên lạc"
            android:textColor="@color/primary_700"
            android:textStyle="bold"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <RelativeLayout
        android:paddingVertical="4dp"
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginVertical="4dp"
            android:id="@+id/tv_shop_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cửa hàng:"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:layout_marginVertical="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành Mập 1"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/tv_shop"
            android:layout_marginStart="4dp"
            android:layout_toRightOf="@id/tv_shop_temp"/>

        <TextView
            android:layout_marginVertical="4dp"
            android:layout_below="@id/tv_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_phone_temp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Số điện thoại:"/>
        <TextView
            android:layout_marginVertical="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0868754872"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/tv_phone"
            android:layout_marginStart="4dp"
            android:layout_below="@id/tv_shop_temp"
            android:layout_toRightOf="@id/tv_phone_temp"/>

        <TextView
            android:layout_marginVertical="4dp"
            android:layout_below="@id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_address_temp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Địa chỉ:"/>
        <TextView
            android:layout_marginVertical="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KTX khu B, Đại học Quốc Gia TP.HCM"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/tv_address"
            android:layout_marginStart="4dp"
            android:layout_below="@id/tv_phone_temp"
            android:layout_toRightOf="@id/tv_address_temp"/>
        <fragment
            android:layout_marginVertical="4dp"
            android:layout_below="@id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/fm_map"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_bottom"
        android:gravity="right">
        <Button
            android:background="@null"
            android:id="@+id/btn_ok"
            android:textColor="@color/primary_700"
            android:text="OK"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
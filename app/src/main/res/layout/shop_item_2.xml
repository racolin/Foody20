<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="5dp"
    android:paddingVertical="8dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:id="@+id/iv_shop"
            android:background="@drawable/background_shop"
            android:src="@drawable/shop_image"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thành Mập 1"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/tv_title"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quán cơm sáng trưa tối bình dân."
        android:textSize="10sp"
        android:id="@+id/tv_description"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: Quận 9, TP. Hồ Chí Minh."
            android:textSize="10sp"
            android:id="@+id/tv_address"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.3km"
            android:textColor="@color/secondary_800"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:id="@+id/tv_dítance"
            />
    </RelativeLayout>
</LinearLayout>


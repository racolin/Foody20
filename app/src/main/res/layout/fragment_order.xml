<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:paddingTop="12dp"
        android:paddingHorizontal="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn loại đơn hàng:"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3">
        <RadioButton
            android:checked="true"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rd_all"
            android:text="Tất cả"/>
        <RadioButton
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rd_wait"
            android:text="Đang đợi"/>
        <RadioButton
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rd_delivering"
            android:text="Đang giao"/>
        <RadioButton
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rd_delivered"
            android:text="Đã giao"/>
        <RadioButton
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rd_you_cancel"
            android:text="Bạn hủy"/>
        <RadioButton
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rd_shop_cancel"
            android:text="Shop hủy"/>
    </GridLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_orders"/>
</LinearLayout>
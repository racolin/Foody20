<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Foody_20" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/primary_800</item>
        <item name="colorPrimary">@color/primary_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_200</item>
        <item name="colorSecondaryVariant">@color/secondary_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_700</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Toolbar" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_900</item>
        <item name="colorPrimaryVariant">@color/primary_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="color">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_400</item>
        <item name="colorSecondaryVariant">@color/secondary_800</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="titleTextAppearance">@style/titleSizeToolbar</item>
    </style>
    <style name="textSizeToolbar" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="titleSizeToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textSize">24sp</item>
    </style><!-- Base application theme. -->
</resources>